<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#D3D3D3">


    <!-- Main ImageView -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/image1"
        android:scaleType="centerCrop" />

    <!-- Red Button with Tree Icon to the right -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/buttonRed"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0000"
            android:text="Tree"
            android:textColor="#000000"
            />

        <ImageView
            android:id="@+id/iconRed"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_tree" />
    </LinearLayout>

    <!-- Green Button with Lion Icon to the right -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/buttonGreen"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="Lion"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/iconGreen"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_lion" />
    </LinearLayout>

    <!-- Blue Button with Wolf Icon to the right -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/buttonBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0000FF"
            android:text="Wolf"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/iconBlue"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_wolf"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>




